			<!-- END Gallery Header -->

			<%
				if(images.length == 0){
					%>
					<div class="noshow"> There are currently no promotions in this category! </div>

					<%
				}
			%>
			<div class="row gallery">
				<% _(images).each(function(image){
					var imageURL = image.get('sizeNormal').url();
					var imageMetadata = image.get('imageMetadata');
					var title = imageMetadata.get('title');
					var desc = imageMetadata.get('desc');
					var promoStart = imageMetadata.get('promoStart').toLocaleDateString();
					var location = imageMetadata.get('location');
					var reason = imageMetadata.get('reason');
					var company = image.get("user").get("company");
					var promoEnd = imageMetadata.get("promoEnd");
				    var dd = promoEnd.getDate();
				    var mm = promoEnd.getMonth()+1; 
				    var yyyy = promoEnd.getFullYear();

				    if(dd<10){
				        dd='0'+dd;
				    } 
				    if(mm<10){
				        mm='0'+mm;
				    } 
			       	
				    var promoDate = dd+'/'+mm+'/'+yyyy;

					var dataCategory = "";
					var reasonTag = "";
					var status = imageMetadata.get("approval");
					if (status=="1") {
						dataCategory = "current";
					}else if (status=="0"){
						dataCategory = "pending";
					}else if (status=="-1"){
						dataCategory = "rejected";
						reasonTag = "<h3>Reason for Rejection: </h3>" + reason;
					}else if (status=="2"){
						dataCategory = "expired";
					} 

					if(dataCategory=="rejected"){
						
					}


					%>
					<div class="col-sm-3">
						<div class="widget-image widget-image-xs gallery-image-container animation-fadeInQuick2" data-category="<%=dataCategory%>">

							<img src="<%= imageURL %>"
							alt="<%= desc
							+'|||'
							+promoEnd
							+'|||'
							+location
							%>" 
							>
							<a href="<%= image.get('sizeNormal').url() %>" data-toggle="lightbox-image" class="gallery-image-options"								
								title="<%= 
								 "<h3>Title: </h3>"
								+ title
								+ "<h3>Company: </h3>"
								+ company
								+ "<h3>Description: </h3>"
								+ desc
								+ "<h3> Status: </h3>" 
								+ dataCategory  
								+ "<h3>Promotion Start Date: </h3>"
								+ promoStart
								+ "<h3>Promotion End Date: </h3>"
								+ promoDate
								+ "<h3>Location: </h3>"
								+ location
								+ reasonTag
								%>">
								<i class="fa fa-search-plus fa-3x text-light">
								</i>
							</a>

						</div>
						<%
						if (status=="0"){
							%>
							<!-- bookmark like share button -->
							<div class="modal-footer">

								<button onClick="location.href='/i/<%=image.id%>/approve'" type="button" class="btn btn-effect-ripple btn-success">
									<i class="fa fa-check-circle">
									</i> Approve
								</button>
								<!-- onClick="location.href='/i/<%=image.id%>/reject'" type="button" class="btn  -->
								<div class="btn-group">
									<a data-toggle="dropdown" class="btn btn-danger dropdown-toggle">Reject <span class="caret"></span></a>
									<ul class="dropdown-menu text-left">
										
										<li>
											<a href="/i/<%=image.id%>/reject/bad-image">
												<i class="fa fa-times-circle pull-right"></i>
												Poor image quality
											</a>
										</li>
										<li>
											<a href="/i/<%=image.id%>/reject/bad-content">
												<i class="fa fa-times-circle pull-right"></i>
												Inappropriate content
											</a>
										</li>
									</ul>
								</div>
							</div>
							<!-- END bookmark like share button -->
							<%}else if (status=="1"){%>
							<!-- ads footer -->
							<div class="modal-footer">
								<h2 class="text-info"> Approved </h2>
							</div>
							<!-- ads footer -->
							<%}
							else if (status=="-1"){%>
							<!-- ads footer -->
							<div class="modal-footer">
								<h2 class="text-danger"> Rejected </h2>
							</div>
							<!-- ads footer -->
							<%}
							else{%>
							<!-- ads footer -->
							<div class="modal-footer">
								<h2 class="text-muted"> Expired </h2>
							</div>
							<!-- ads footer -->
							<%}%>
						</div>
						<%});%>
						<br><br>
					</div>
					<!-- END Gallery Items -->
				</div>
				<!-- END Page Content -->
