								<button type="button" class="share btn btn-effect-ripple btn-success" data-dismiss="
								modal" title="<%=imageID%> + '|||' + <%=title%> + '|||' + <%=desc%>">
									<i class="fa fa-bookmark"></i> Share
								</button>			
								
							</div>
							<!-- END bookmark like share button -->
