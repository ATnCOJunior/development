                                <!-- END Title -->

                                <!-- Messages -->
                                <div class="block-content-full" id="merchant-inbox">
                                    <table class="table table-borderless table-hover table-vcenter remove-margin">
                                        <tbody>
                                            <% _(notifications).each(function(notification){
                                                var title = ""; 
                                                var timestamp = "";
                                                var message = "";
                                                var code = notification.get("code");
                                                
                                                if(code==4){
                                                    title = "Ads Approved";
                                                }else if(code==5){
                                                    title = "Ads Rejected";

                                                }
                                                message = notification.get("message");
                                                timeTemp = notification.createdAt;

                                                var buffer = new Date(timeTemp.getTime()+timeTemp.getTimezoneOffset()*60*1000);
                                                var offset = timeTemp.getTimezoneOffset() / 60;
                                                var hours = timeTemp.getHours();
                                                buffer.setHours(hours - offset);
                                                timeTemp = buffer;  
                                                

                                                var dd = timeTemp.getDate();
                                            var mm = timeTemp.getMonth()+1; //January is 0!
                                            var yyyy = timeTemp.getFullYear();
                                            var hours = timeTemp.getHours();
                                            var minutes = timeTemp.getMinutes();
                                            var seconds = timeTemp.getSeconds();

                                            if(dd<10){
                                                dd='0'+dd;
                                            } 
                                            if(mm<10){
                                                mm='0'+mm;
                                            } 
                                            if(hours<10){
                                                hours='0'+hours;
                                            } 
                                            if(minutes<10){
                                                minutes='0'+minutes;
                                            } 
                                            if(seconds<10){
                                                seconds='0'+seconds;
                                            } 
                                            var timestamp = dd+'/'+mm+'/'+yyyy+" "+hours+":"+minutes+":"+seconds;
                                            
                                            %>
                                            <!-- Use the first row as a prototype for your column widths -->
                                            <tr>
                                                <td class="td-label td-label-muted text-center" style="width: 5%;">
                                                    <label class="csscheckbox csscheckbox-primary"><input type="checkbox"><span></span></label>
                                                </td>

                                                <td>
                                                    <h4>
                                                        <a class="text-dark" title="
                                                        <%=title+'|'+timestamp+'|'+message%>">
                                                        <strong>
                                                            <%=title%>
                                                            <br>
                                                        </strong>
                                                    </a>
                                                </h4>
                                                <span class="text-muted"><%=message%></span>
                                            </td>
                                            <td class="hidden-xs text-center" style="width: 30px;">
                                                <i class="fa fa-paperclip fa-2x text-muted"></i>
                                            </td>
                                            <td class="hidden-xs text-right text-muted" style="width: 120px;"><em><%=timestamp%></em></td>
                                        </tr>
                                        <% 
                                    });
                                    %>
                                </tbody>
                            </table>
                        </div>
                        <!-- END Messages -->
                    </div>
                    <!-- END Message List -->
