        <!-- Page content -->
        <div id="page-content">
            <%
            if(bookmarks.length == 0){
                %>
                You have not bookmarked any advertisements so far!
                <%
            }
            %>
            <div class="row gallery">
                <!-- BOOKMARK CONDITIONS -->
                <% _(bookmarks).each(function(bookmark){
                    var image = bookmark.get('bookmark_image');
                    
                    var imageURL = image.get('sizeNormal').url();
                    
                    var imageMetadata = image.get('imageMetadata');
                    var desc = imageMetadata.get('desc');
                    var promoStart = imageMetadata.get('promoStart').toLocaleDateString();
                    var location = imageMetadata.get('location');
                    var title = imageMetadata.get("title");
                    var promoEnd = imageMetadata.get("promoEnd");
                    var dd = promoEnd.getDate();
                    var mm = promoEnd.getMonth()+1; 
                    var yyyy = promoEnd.getFullYear();

                    if(dd<10){
                        dd='0'+dd;
                    } 
                    if(mm<10){
                        mm='0'+mm;
                    } 
                    
                    var promoDate = dd+'/'+mm+'/'+yyyy;

                    if (imageMetadata.get("approval")==1){
                        %>
                        <div class="col-sm-3">

                            <!-- gallery-image-container animation-fadeInQuick2 -->
                            <div class="widget-image widget-image-xs gallery-image-container animation-fadeInQuick2">    <img src="<%= imageURL %>"
                                alt="<%= desc
                                +'|||'
                                +promoStart
                                +'|||'
                                +location
                                %>" 
                                >
                                <a href="<%= imageURL %>" data-toggle="lightbox-image" class="gallery-image-options"
                                    title="<%= 
                                    "<h3>Description: </h3>"
                                    + desc
                                    + "<br>"
                                    +"<h3>Promotion Start Date: </h3>"
                                    + promoStart
                                    + "<br>"
                                    +"<h3>Promotion End Date: </h3>"
                                    + promoDate
                                    + "<br>"
                                    +"<h3>Location: </h3>"
                                    + location 
                                    %>"
                                    <i class="fa fa-search-plus fa-3x text-light"></i>
                                </a>
                            </div>
                        </div>
                        <!-- END Page Content -->

                        <%}
                    });%>
                </div>
